

<div class="content page_contains">
  <div class="container">
    <h2>My Bookings</h2>
    <div class="row">
      <% 10.times do %>
      <div class="col-xs-12 col-sm-11 col-md-5">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');"></div>
      </div>
      <% end %>
      <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-sm-11 col-md-5">
        <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="card-category"><%= booking.experience.user.name%>
              </div>
                <div class="card-description">
                  <h2><%= booking.experience.title %></h2>
                  <p><%= booking.experience.incentive %></p>
                  <p><%= booking.experience.location %></p>
                </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="<%= booking_path(booking) %>" ></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container" style="flex: 0 0 33%">
    <h2>My Experiences</h2>
    <div class="row">
      <% 10.times do %>
      <div class="col-xs-12 col-sm-12 col-md-11">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');"></div>
      </div>
      <% end %>
      <% @current_user.experiences.each do |experience| %>
        <div class="col-xs-12 col-sm-12 col-md-11">
        <!-- insert <div class="card"> -->
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="card-category"><%= experience.user.name%>
              </div>
                <div class="card-description">
                  <h2><%= experience.title %></h2>
                  <p><%= experience.incentive %></p>
                  <p><%= experience.location %></p>
                </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="<%= experience_path(experience) %>" ></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



<h2>My Bookings</h2>
 <% @bookings.each do |booking| %>
  <%= booking.experience.title %>
  <%= booking.experience.incentive %>
  <%= booking.date %>
  <%= link_to 'view', booking_path(booking) %>
 <% end %>
<h2>My Experiences</h2>
<% if current_user.experiences.nil? %>
  <h3>You have no Experiences posted</h3>
<% else %>
 <% current_user.experiences.each do |experience| %>
  <%= experience.title %>
  <%= experience.incentive %>
  <%= link_to 'edit', edit_experience_path(experience) %>
  <%= link_to 'show', experience_path(experience) %>
  <%= link_to 'delete', experience_path(experience), method: :delete, data: {confirm: 'are you sure?'} %>
  <% if experience.bookings.nil? %>
    <p>there are currently no bookings for this experience</p>
  <% else %>
    <% experience.bookings.each do |booking| %>
      <%= booking.date %>
    <% end %>
  <% end %>
 <% end %>
<% end %>
