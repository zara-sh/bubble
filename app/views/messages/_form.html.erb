
<%= form_for( [@conversation, @message], method: :post, id:"new_message", remote: true, :format => :js) do |f| %>
 <div class="field">
   <%= f.text_area :body, class: "form-control" %>
 </div>
 <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
 <div>
   <%= f.submit "Add Reply"%>
 </div>
<% end %>

