  <%# if @over_ten %>
   <%#= link_to "Show Previous", "?m=all" %>
  <%# end %>
  <div class="ui segment" id="messages">
   <% @messages.each do |message| %>
    <% if message.body %>
     <% user = User.find(message.user_id) %>
     <div class="item">
      <div class="content">
       <div class="header"><strong><%= user.first_name %></strong>
        <%= message.message_time %></div>
        <div class="list">
         <div class="item">
          <i class="right triangle icon"></i>
           <%= render 'messages/show', message: message %>
        </div>
      </div>
     </div>
   </div>
   <% end %>
  <% end %>
  </div>
<!-- </div> -->
<%= render 'messages/form', conversation: @conversation, message: @message %>
