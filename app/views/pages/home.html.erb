

<div class="banner">
  <div class="banner-content">
    <h1>A friendly neighbor is waiting to show you around</h1>
    <p>What would you like to discover today?</p>

    <div class="icons">
      <div class="container">
        <div class="row">
          <% @categories.each.with_index(1) do |c, i| %>
            <% if i == 1 %>
              <div class="col-xs-12 col-sm-6 col-md-2 col-md-offset-1">
                <div class="home-icon">
                  <%= link_to category_path(c), class: 'home-category-icon' do %>
                    <!-- link_to category icon -->
                    <i class="fa <%=c.icon%> fa-5x" aria-hidden="true"></i>
                  <% end %>
                  <p>
                    <%= c.name %>
                  </p>
                </div>
              </div>
            <% else %>
              <div class="col-xs-12 col-sm-6 col-md-2">
                <div class="home-icon">
                  <%= link_to category_path(c), class: 'home-category-icon' do %>
                    <!-- link_to category icon -->
                    <i class="fa <%=c.icon%> fa-5x" aria-hidden="true"></i>
                  <% end %>
                  <p>
                    <%= c.name %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


