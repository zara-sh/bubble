<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
     <% if current_user.photo.path %>
          <% avatar_url = current_user.photo.path %>
        <% else %>
          <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
      <% end %>
      <%= cl_image_tag avatar_url, height: 60, width: 50, crop: :fill,style: 'padding: 10px; border-radius:5px;' %>
      <%= current_user.name %>
      <%= current_user.phone %>
      <%= current_user.bio %>
      <%= current_user.hobbies %>

      <%= link_to "edit profile", profile_edit_path %>
      <%= link_to "Delete", profile_delete_path,
            method: :delete, data: {confirm: "are you sure?"} %>
      <%= link_to "all my bookings", bookings_path %>
    </div>
  </div>
</div>
